<tbody class="products-table">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Price</th>
  </tr>
  {{#each products as |product|}}
  console.log(product)
    <tr>
      <td>{{product.Name}}</td>
      <td>{{product.Category}}</td>
      <td>{{product.Price}}</td>
      <td >
        <form class="order-product">
          <input type="hidden" placeholder="{{product.Name}}" name="product[Name]">
          <input type="hidden" placeholder="{{product.Category}}" name="product[Category]">
          <input type="hidden" placeholder="{{product.Price}}" name="product[Price]">
          <button type="submit" class="btn btn-success add-to-cart-btn">Add to Cart</button>
        </form>
      </td>
    </tr>
  {{/each}}
</tbody>
