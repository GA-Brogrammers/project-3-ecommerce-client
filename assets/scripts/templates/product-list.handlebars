<tbody class="products-table">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Price</th>
  </tr>
  {{#each products as |product|}}
  console.log(product)
    <tr>
      <td>{{product.name}}</td>
      <td>{{product.category}}</td>
      <td>{{product.price}}</td>
      <td >
        <form class="order-product">
          <input type="hidden" value="{{product.name}}" name="products[name]">
          <input type="hidden" value="{{product.category}}" name="products[category]">
          <input type="hidden" value="{{product.price}}" name="products[price]">
          <button type="submit" class="btn btn-success add-to-cart-btn">Add to Cart</button>
        </form>
      </td>
    </tr>
  {{/each}}
</tbody>
